/*Programa que calcula el area y el perimetro de un circulo*/

#include <stdio.h>
#include <conio.h>
#define  PI 3.1416

main()
{

float diam,area,perimetro,radio;

char NOMBRE[10];

printf("\n HOLA ESTE ES UN PROGRAMA PARA CALCULAR EL AREA Y PERIMETRO DE UN CIRCULO");

printf("\n\n CUAL ES TU NOMBRE  ");
scanf("%s",&NOMBRE);



printf("\n\n %s  Dame el diametro  ",NOMBRE);
scanf("%f",&diam);


radio=diam/2;
area=PI*radio*radio;
perimetro=PI*diam;

printf("\n\n %s El valor del Area es:%.2f",NOMBRE, area);
printf("\n\n %s El valor del perimetro es:%.2f",NOMBRE, perimetro);


getch ();
}
